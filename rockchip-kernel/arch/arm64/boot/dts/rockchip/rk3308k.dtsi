#include <dt-bindings/input/input.h>
#include "rk3308.dtsi"

/ {
	uboot-wide-temperature {
		status = "okay";
		compatible = "rockchip,uboot-wide-temperature";
	};
};

&cpu0_opp_table {
	opp-408000000 {
		/delete-property/ opp-suspend;
	};
	opp-1008000000 {
		opp-suspend;
	};
};

&thermal_zones {
	soc-thermal {
		sustainable-power = <308>;
		k_pu = <8>;
		k_po = <1024>;
		k_i = <0>;

		trips {
			trip-point-0 {
				temperature = <55000>;
			};
			trip-point-1 {
				temperature = <90000>;
			};
		};
	};
};
